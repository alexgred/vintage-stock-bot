{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
