{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "./dist",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
